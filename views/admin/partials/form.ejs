<form>
    <!-- ko foreach: { data: fields, as: 'field' } -->
    <div class="form-group">
        <label data-bind="html: field.label, attr: { for: field.name }">Nome</label>

        <!-- ko if: field.type == 'text' -->
        <input type="text" class="form-control" data-bind="value: field.value, attr: { id: field.name }">
        <!-- /ko -->

        <!-- ko if: field.type == 'text-area' -->
        <textarea class="form-control" data-bind="value: field.value, attr: { id: field.name }"></textarea>
        <!-- /ko -->

        <!-- ko if: field.type == 'upload' -->
        <div data-bind="value: field.value, attr: { id: field.name }">
            <div class="uk-placeholder">
                <div class="uk-alert">
                    <p data-bind="html: $root.renderHtml(field)"></p>
                </div>

                Arraste e solte um arquivo ou <a class="uk-form-file">selecione<input type="file"></a>.
            </div>

            <div class="uk-progress uk-hidden">
                <div class="uk-progress-bar" style="width: 0%;"></div>
            </div>
        </div>
        <!-- /ko -->

        <!-- ko if: field.type == 'number' -->
        <input type="text" class="form-control" data-bind="value: field.value, attr: { id: field.name }">
        <!-- /ko -->
    </div>
    <!-- /ko -->

    <div class="btn-group">
        <button type="button" class="btn button" data-bind="click: save">Salvar</button>
        <button type="button" class="btn button" data-bind="click: clear, text: clearTitle"></button>
        <button type="button" class="btn button" data-bind="click: remove, enable: selectedId">Remover</button>
    </div>
</form>